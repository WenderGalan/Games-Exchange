<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageCircleViewAdapter"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textViewTituloAdapter"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_no_camera"
        app:civ_border_color="#FFFFFF"
        app:civ_border_width="1dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTituloAdapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageCircleViewAdapter"
        android:layout_toRightOf="@+id/imageCircleViewAdapter"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewCidadeDateAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageCircleViewAdapter"
        android:layout_alignLeft="@+id/textViewTituloAdapter"
        android:layout_alignStart="@+id/textViewTituloAdapter"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textViewValorTrocaAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewCidadeDateAdapter"
        android:layout_alignLeft="@+id/textViewCidadeDateAdapter"
        android:layout_alignStart="@+id/textViewCidadeDateAdapter"
        android:textColor="@color/azulForte"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>