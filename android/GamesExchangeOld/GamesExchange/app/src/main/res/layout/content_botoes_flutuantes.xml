<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|bottom"
    android:gravity="center"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/floatingButtonTextLigar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:floating_background_color="@color/colorPrimary"
        app:floating_left_icon="@drawable/ic_phone"
        app:floating_title="@string/ligar"
        app:floating_title_color="@android:color/white" />

    <ru.dimorinny.floatingtextbutton.FloatingTextButton
        android:id="@+id/floatingButtonTextEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        app:floating_background_color="@color/colorPrimary"
        app:floating_left_icon="@drawable/ic_email"
        app:floating_title="@string/email"
        app:floating_title_color="@android:color/white" />

</LinearLayout>

